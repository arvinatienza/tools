# Ssh
alias ssh-agent-login='eval $(ssh-agent -s); ssh-add'

# Git
alias git-diff-no-space="git diff --ignore-space-at-eol --ignore-space-change --ignore-all-space --ignore-cr-at-eol"
alias git-clean-branches='git branch --merged | egrep -v "(^\*|master|develop)" | xargs git branch -d'

